@model IEnumerable<ASP.NET_Student.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1>Список студентов</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">Добавить студента</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Оценка</th>
                <th>Дисциплина</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discipline)
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Подробнее</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-action="TopBottomStudents">Показать лучших и худших студентов</a>
        <a class="btn btn-secondary" asp-action="CalculateTotalScore">Показать сумму всех баллов</a>
        <a class="btn btn-secondary" asp-action="ExportToTextFile">Сохранить список студентов с результатами в txt</a>
    </div>
</div>